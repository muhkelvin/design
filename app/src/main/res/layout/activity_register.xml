<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".register.RegisterActivity">

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="490dp"
        android:layout_height="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/pic_register"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:hint="Masukkan Email"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/iv_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_form"
        android:paddingLeft="16dp"
        android:paddingRight="24dp"
    />


    <TextView
            android:id="@+id/tv_lupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_email"
            app:layout_constraintRight_toRightOf="@id/et_email"
            android:text="Lupa Password ?"
            android:layout_marginTop="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_daftar"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_lupa"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            android:background="@drawable/rouded"
            android:text="Buat Akun"
            android:textColor="@color/white"/>
    
    <ImageView
        android:id="@+id/atau"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt_daftar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_daftar"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/syarat"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/atau"
        android:text="Dengan Log In kamu menyerujui Syarat, Ketentuan dan Kebijakan Privasi Kaboor"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/punya"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/syarat"
        android:text="Udah punya akun? Log in aja!"
        android:gravity="center"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="83dp"/>









</androidx.constraintlayout.widget.ConstraintLayout>